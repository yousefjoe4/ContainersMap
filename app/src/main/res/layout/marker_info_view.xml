<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date updated :"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="32dp"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.05.2019"
        android:layout_marginRight="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Container ID :"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="32dp"/>

    <TextView
        android:id="@+id/tv_container_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8000"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="SesnosrID :"/>
    <TextView
        android:id="@+id/tv_sensor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="784"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Fullness Rate :"/>

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Tempreature :"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70"/>


</GridLayout>